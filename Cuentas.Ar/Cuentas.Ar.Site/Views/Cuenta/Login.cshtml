@model Cuentas.Ar.Entities.M_Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body style="background-image: url('../../Content/login/images/fondoLogin.jpg');">
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">

                @using (Html.BeginForm("Login", "Cuenta", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { id = "loginForm", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="login100-form validate-form">
                        <span class="login100-form-title">
                            Bienvenido
                        </span>
                        <span class="login100-form-title">
                            <img src="../../Content/logo/misCuentas_blanco.png" style="max-width: 200px; max-height: 300px" />
                        </span>
                        <div>
                            <div class="wrap-input100" style="margin-bottom: 5px">
                                @Html.TextBoxFor(model => model.Mail, new { @class = "input100", @maxlength = "200", id = "email" })
                                <span class="focus-input100" data-placeholder="Email"></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.Mail)
                        </div>

                        <div class="mgTop10">
                            <div class="wrap-input100" style="margin-bottom: 5px">
                                <span class="btn-show-pass">
                                    <i class="zmdi zmdi-eye"></i>
                                </span>
                                @Html.PasswordFor(model => model.Password, new { @class = "input100", @maxlength = "40", @autocomplete = "off", Value = "" })
                                <span class="focus-input100" data-placeholder="Password"></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.Password)
                        </div>

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn">
                                    Ingresar
                                </button>
                            </div>
                        </div>

                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger mgBottom0 mgTop5">@Html.ValidationMessage("EstadoLogin")</div>
                        }

                        <div class="text-center p-t-20">
                            <span class="txt1">
                                ¿No tenes una cuenta?
                            </span>

                            <a href="@Url.Action("AltaLoginTipoCuenta", "Usuario")" class="txt2">Registrate</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>

<script>
    if ($("#email").val() != null && $("#email") != "") {
        $("#email").blur();
    }
    else {
        $("#email").focusout();
    }
</script>