@model Cuentas.Ar.Entities.M_Home
@{
    ViewBag.Title = "Home Page";
}

<div class="col-md-12">
    <div>
        <div class="">
            <div class="col-lg-12">
                <h1 class="page-headerFix"><i class="fa fa-home"></i> Resuen de Cuentas </h1>
            </div>
            @using (Ajax.BeginForm("Buscar", "Poliza", new AjaxOptions
            {
                InsertionMode = InsertionMode.Replace,
                UpdateTargetId = "lista",
                OnBegin = "onBegin",
                OnComplete = "onComplete",
                OnSuccess = "onSuccess"
            }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)

            <div class="card">
                <div class="card-header deep-orange lighten-1 white-text">Featured</div>
                <div class="card-body">
                    <h4 class="card-title">Special title treatment</h4>
                    <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                    <a class="btn btn-deep-orange">Go somewhere</a>
                </div>
            </div>

                <nav class="navbar navbar-default" role="search">
                    <div class="container-fluid mgTop1">
                        <div class="row col-md-12">
                            <div class="col-md-6">
                                <span>Saldo Actual: $57.000</span>
                                <br />
                                <br />
                                <span>Ingresos: $32.000</span>
                                <br />
                                <br />
                                <span>Egresos: $10.000</span>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.Label("", "FechaDesde", new { @class = "form-control-label col-md-5" })
                                    <div class="col-md-7">
                                        @Html.TextBoxFor(model => model.FechaDesde, new { @id = "fechaDesde", @class = "form-control" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.Label("", "FechaHasta", new { @class = "form-control-label col-md-5" })
                                    <div class="col-md-7">
                                        @Html.TextBoxFor(model => model.FechaHasta, new { @id = "fechaDesde", @class = "form-control" })
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </nav>
            }
        </div>
    </div>
    <div>
        Hola 2
    </div>
</div>