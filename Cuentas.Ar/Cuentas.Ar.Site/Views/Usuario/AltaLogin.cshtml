@model Cuentas.Ar.Entities.Usuario
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutEmpty.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- CSS -->
    <!--===============================================================================================-->
    <link href="~/Content/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/login/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/login/fonts/iconic/css/material-design-iconic-font.min.css" rel="stylesheet" />
    <!--===============================================================================================-->
    <link href="~/Content/login/css/main.css" rel="stylesheet" />
    <link href="~/Content/login/css/util.css" rel="stylesheet" />
    <!--===============================================================================================-->
</head>
<body style="background-image: url('../../Content/login/images/fondoLogin.jpg');">

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm("Alta", "Usuario", new { login = true }, FormMethod.Post, new { id = "loginForm", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="login100-form validate-form">
                        <span class="login100-form-title p-b-26">
                            Nueva Cuenta
                        </span>
                        <span class="login100-form-title p-b-30">
                            <i class="zmdi zmdi-font"></i>
                        </span>

                        <div class="wrap-input100 validate-input" data-validate="Ingrese un nombre.">
                            @Html.TextBoxFor(model => model.Nombre, new { @class = "input100", @maxlength = "200" })
                            <span class="focus-input100" data-placeholder="Nombre Completo"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Ingrese un correo electronico.">
                            @Html.TextBoxFor(model => model.Email, new { @class = "input100", @maxlength = "200" })
                            <span class="focus-input100" data-placeholder="Email"></span>
                        </div>

                        <div class="wrap-input100 validate-input" data-validate="Ingrese una contraseña.">
                            <span class="btn-show-pass">
                                <i class="zmdi zmdi-eye"></i>
                            </span>
                            @Html.PasswordFor(model => model.Password, new { @class = "input100", @maxlength = "40", @autocomplete = "off" })
                            <span class="focus-input100" data-placeholder="Contraseña"></span>
                        </div>

                        @*<div class="wrap-input50">
                            <span class="input100Fecha">Fecha</span>
                            <input class="input100" type="date" name="fecha">
                        </div>*@

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn">
                                    Crear
                                </button>
                            </div>
                        </div>
                    </div>
                }
                <div class="text-center p-t-5">
                    <span class="txt1">
                        Volver al <a href="@Url.Action("Login", "Cuenta")" class="txt2">Login</a>
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Javascript -->
    <!--===============================================================================================-->
    <script src="~/Content/login/js/main.js"></script>
</body>
</html>