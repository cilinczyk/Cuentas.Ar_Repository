@model Cuentas.Ar.Entities.M_UsuarioLogin
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>
<body style="background-image: url('../../Content/login/images/fondoLogin.jpg');">

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm("Alta", "Usuario", FormMethod.Post, new { id = "loginForm", role = "form" }))
                {
                    @Html.HiddenFor(model => model.idTipoCuenta)
                    @Html.AntiForgeryToken()

                    <div class="login100-form validate-form">
                        <span class="login100-form-title">
                            Nueva Cuenta
                        </span>
                        <span class="login100-form-title p-b-10">
                            <img src="../../Content/logo/misCuentas_blanco.png" style="max-width: 200px; max-height: 300px" />
                        </span>

                        <div>
                            <div class="wrap-input100" style="margin-bottom: 5px">
                                @Html.TextBoxFor(model => model.DatosBasicos.Nombre, new { @class = "input100", @maxlength = "50", @id = "nombre" })
                                <span class="focus-input100" data-placeholder="Nombre Completo"></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.DatosBasicos.Nombre)
                        </div>

                        <div class="mgTop10">
                            <div class="wrap-input100" style="margin-bottom: 5px">
                                @Html.TextBoxFor(model => model.DatosBasicos.Email, new { @class = "input100", @maxlength = "40", id = "email" })
                                <span class="focus-input100" data-placeholder="Email"></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.DatosBasicos.Email)
                        </div>

                        <div class="mgTop10">
                            <div class="wrap-input100" style="margin-bottom: 5px">
                                <span class="btn-show-pass">
                                    <i class="zmdi zmdi-eye"></i>
                                </span>
                                @Html.PasswordFor(model => model.DatosBasicos.Password, new { @class = "input100", @maxlength = "40", @autocomplete = "off", id = "pass", Value = "" })
                                <span class="focus-input100" data-placeholder="Password"></span>
                            </div>
                            @Html.ValidationMessageFor(model => model.DatosBasicos.Password)
                        </div>

                        @*<div class="wrap-input50">
                                <span class="input100Fecha">Fecha</span>
                                <input class="input100" type="date" name="fecha">
                            </div>*@

                        <div class="container-login100-form-btn">
                            <div class="wrap-login100-form-btn">
                                <div class="login100-form-bgbtn"></div>
                                <button class="login100-form-btn">
                                    Continuar
                                </button>
                            </div>
                        </div>
                    </div>
                }

                @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey("UsuarioRegistrado"))
                {
                    <div class="alert alert-danger mgBottom0 mgTop5">@Html.ValidationMessage("UsuarioRegistrado")</div>
                }

                <div class="text-center p-t-20">
                    <span class="txt1">
                        Volver al <a href="@Url.Action("Login", "Cuenta")" class="txt2">Login</a>
                    </span>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
<script src="~/Content/login/js/main.js"></script>
<script>
    if ($("#nombre").val() != null && $("#nombre") != "") {
        $("#nombre").blur();
    }
    else {
        $("#nombre").focusout();
    }

    if ($("#email").val() != null && $("#email") != "") {
        $("#email").blur();
    }
    else {
        $("#email").focusout();
    }
</script>