        <a class="simple-text logo-normal" style="text-align:center">
            MisCuentas.com
        </a>
    </div>
    <div class="sidebar-wrapper">
        <ul class="nav">

            @Html.MenuActionLinkMenu("Resumen de cuentas", "Index", "Home", "home")

